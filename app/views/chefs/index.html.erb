<%= render 'shared/page_title', title: "List of Chefs" %>

<ul class="nav nav-tabs">
  <li>
    <%= link_to "Recipes", recipes_path %>
  </li>
  <li class="active">
    <%= link_to "Chefs", chefs_path %>
  </li>
</ul>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= will_paginate %>
  </div>
</div>

<% @chefs.each do |chef| %>
  <div class="row">
    <div class="col-md-2 center">
      <%= link_to gravatar_for(chef, size: 125), chef_path(chef) %>
      <p>
        <h5><%= chef.chefname %></h5>
      </p>
    </div>
    <div class="col-md-10 well well-sm">
      <p>
        <h5>About <%= chef.chefname %></h5>
      </p>
    </div>    
    
  </div>

<% end %>