<%= render 'shared/page_title', title: 'Sign In' %>

<div class="row">
  <div class="well col-md-4 col-md-offset-4">
    <%= form_tag '/login' do %>
      
      <%= label_tag :email %>
      <%= text_field_tag :email, nil, :class => '' %>
      <br>
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, :class => '' %>
      
      <%= submit_tag 'Login', class: 'btn' %>
      
    <% end %>
  </div>
</div>